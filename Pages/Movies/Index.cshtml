@page
@model VHSVibesLair.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p></p>

<button class="btn bg-warning">
    <i class="bi bi-plus-square-fill"></i>  <a asp-page="Create" class="text-decoration-none">Create New</a>
</button>

       

<p>
</p>


<form>
   
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="genre" class="col-form-label">Genre:</label>
            <select asp-for="MovieGenre" class="form-control" asp-items="Model.Genres">
                <option value="" class="dropdown-menu">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label for="title" class="col-form-label">Title:</label>
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search" />
        </div>
        @* <div class="col-auto">
            <label for="search" class="col-form-label">Search:</label>
             <input type="submit" value="Filter" class="btn btn-group-sm bg-warning" /> 
        </div> *@
    </div>

  
</form>

<p></p>

<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                    <button class="btn btn-warning mx-auto">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="text-light text-decoration-none">Edit</a>
                    </button>

                    <button class="btn btn-success mx-auto">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="text-light text-decoration-none">Details</a>
                    </button>

                    <button class="btn bg-danger mx-auto">
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="text-light text-decoration-none">Delete</a>
                    </button>
               
            </td>
        </tr>
}
    </tbody>
</table>

